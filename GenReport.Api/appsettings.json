{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "GenReportPostgres": "Server=localhost;Port=5432;Database=genreport;User Id=postgres;Password=postgres;Include Error Detail=true"
  },
  "Configuration": {
    "createDB": true,
    "seedDB": true,
    "deleteDB": true,
    "port": 12224,
    "CommandTimeout": 12333,
    "IssuerSigningKey": "singingissdflskdnfsdKey",
    "IssuerRefreshKey": "IssuerRefreshKey",
    "AccessTokenExpiry": 15,
    "RefreshTokenExpiry": 60

  },
  "Serilog": {

    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "WeatherForecast"
    }
  }
}
